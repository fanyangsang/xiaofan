<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mFrameLayout"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <View
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="23dp" />
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/fragment_head"
        android:background="#000001">
        <ImageView
            android:id="@+id/iv_return_key"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/touxiang"
            android:layout_centerVertical="true"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小范同学"
            android:layout_marginRight="40dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/qianyuqianxun"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:background="@drawable/corners_bg_pink">
            <ImageView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="100dp"
                android:src="@drawable/p2181503450"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="千与千寻"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="有些事情是不可能忘记的。 只是一时想不起来"
                android:textSize="10dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="5dp">
            <LinearLayout
                android:id="@+id/fanghua"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:background="@drawable/corners_bg_green">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/fanghua"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="芳华"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="从来不需要想起，永远也不会忘记"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"/>
            <LinearLayout
                android:id="@+id/wuwenxidong"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:background="@drawable/corners_bg_danhuang">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/wuwenxidong"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="无问西东"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="真正的青春就该歌颂勇气和爱"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="-- 畅享极致好电影 --"
        android:gravity="center"
        android:textSize="20dp"
        android:background="@color/white"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <LinearLayout
                android:id="@+id/fyu"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:background="@drawable/corners_bg_dark">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/fyy"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="风中有朵雨做的云"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="一场游戏一场梦"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"/>
            <LinearLayout
                android:id="@+id/baoliewusheng"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:background="@drawable/corners_bg_danhuang">
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/blws"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="暴裂无声"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="上层伪善残暴，中层冷漠自私，下层失语无力。"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/diqiu"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:background="@drawable/corners_bg_green2">
            <ImageView
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="100dp"
                android:src="@drawable/dqzhdws"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="地球最后的夜晚"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="地球上最装逼的夜晚"
                android:textSize="10dp"
                android:textStyle="bold"
                android:gravity="center"/>
        </LinearLayout>

</LinearLayout>
</LinearLayout>