<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zut.fy.xiaofan">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/biji"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/biji"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated ="true">
        <activity android:name="com.zut.fy.xiaofan.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TudouActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:hardwareAccelerated="true">
        </activity>
        <activity android:name=".activity.DaTiActivity"/>
        <activity android:name=".activity.LIstViewActivity"/>
    </application>
</manifest>